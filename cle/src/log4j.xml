<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j.dtd">

<log4j:configuration debug="true" xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender class="org.apache.log4j.ConsoleAppender" name="CONSOLE">
		<param name="threshold" value="ALL"/>
		<param name="target" value="System.out"/>
		<layout class="org.apache.log4j.PatternLayout">
			<!--
			<param name="ConversionPattern" value="%d %-5r %-6p [%c] (%t) %m%n"/>
			<param name="ConversionPattern" value="%d %-5r %-6p [%c{3}] (%F:%L) (%t#%M) %m%n"/>
				<param name="ConversionPattern" value="%-5d [%-6t] (%c{3}#%M) %m%n"/>
			-->
			<param name="ConversionPattern" value="%-5d %-6p [%-10c{1}] %m%n"/>
		</layout>
	</appender>
	<root>
		<level value="ALL"/>
		<appender-ref ref="CONSOLE"/>
	</root>
</log4j:configuration>
